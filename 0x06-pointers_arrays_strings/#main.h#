/**
 *_putchar - writes the character to c to stdout
 *@c: The charectar to print
 *
 *Return: On success 1.
 *On error, -1 s returned, and errno is set accordingly
 */
int _putchar(char c);

/**
 *_strcat - concatenates two strings
 *@dest: initial string
 *@src: string to append to *dest
 *
 *Return: dest which is the final string
 */
char *_strcat(char *dest, char *src);

/**
 *_strncat -  concatenates two strings
 *@dest: first string
 *@src: second string
 *@n: number of bytes from src
 *
 *Return: resulting string after concatenation
 */
char *_strncat(char *dest, char *src, int n);

/**
 *_strncpy - copies a string
 *@dest: first string
 *@src: second string
 *@n: number of bytes
 *
 *Return: second string
 */
char *_strncpy(char *dest, char *src, int n);

/**
 *_strcmp - compares two strings
 *@s1: string 1
 *@s2: string 2
 *
 *Return: 0 if string 1 and 2 are equal
 *>0: if first non matching char in s1 is greater than s2
 *<0: if first non matching char in s2 is greater than s1
 */
int _strcmp(char *s1, char *s2);

/**
 *reverse_array - reverses the content of integer array
 *@a: array of integers
 *@n: the number of elements to swap
 */
void reverse_array(int *a, int n);

/**
 *string_toupper - changes all lowercase letters to uppercase
 *@char *:string to convert to uppercase
 *
 *Return: string in uppercase
 */
char *string_toupper(char *);

/**
 *cap_string - capitalizes all words of a string
 *@char *:string to capitalize
 *
 *Return: String with capitalized words
 */
char *cap_string(char *);

